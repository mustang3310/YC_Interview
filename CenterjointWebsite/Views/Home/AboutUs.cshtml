    <div class="container">
        <div class="d-flex justify-content-center">
            <span class="title-slash-orange">/</span>
            <h1 class="text-black mt-4">公司沿革</h1>
        </div>
        <div>
            <img class="h-100 w-100 about-us-history-img" src="~/img/about-us/company-history.png" alt="company-history">
        </div>
    </div>
</section>
