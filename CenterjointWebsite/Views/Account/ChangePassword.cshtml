@model ChangePasswordViewModel

@{
    Layout = "_CmsLayout";
    ViewBag.Title = "修改密碼";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <label asp-for="Name" class="control-label input-group"></label>
                <input asp-for="Name" class="form-control" readonly />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label input-group"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label input-group"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmedPassword" class="control-label input-group"></label>
                <input asp-for="ConfirmedPassword" class="form-control" />
                <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span asp-validation-for="ErrorMessages" class="text-danger"></span>
            </div>
            <div class="mt-2 d-flex justify-content-end p-2">
                <div class="form-group">
                    <input type="submit" value="@ButtonText.Update.GetDescription()" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
